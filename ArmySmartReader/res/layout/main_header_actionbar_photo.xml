<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_header_layout"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@drawable/icon_bg_header"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/h_menu_home"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:visibility="gone" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_home" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="50.0dip"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/h_menu_bnt_backs"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_header_menu" />
    </FrameLayout>

    <ImageView
        android:id="@+id/main_header_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:src="@drawable/text_header" />

    <FrameLayout
        android:layout_width="50.0dip"
        android:layout_height="wrap_content"
        android:visibility="visible" >
    </FrameLayout>
</LinearLayout>